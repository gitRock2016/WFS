<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="
				http://java.sun.com/xml/ns/javaee
				http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	
	<!-- git管理の都合により、プロジェクト名にあわせ変更。もともとは「WonFesSys」 -->
	<display-name>WonFesSys2</display-name>

	 <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
	
	<!-- - Location of the XML file that defines the root application context. 
		- Applied by ContextLoaderListener. -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			 classpath:spring/application-config.xml
		</param-value>
	</context-param>

	<!-- - Servlet that dispatches request to registered handlers (Controller implementations). -->
	<servlet>
		<servlet-name>dispatcherServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/mvc-config.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>dispatcherServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<!-- エンコード指定 -->
	<filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param> 
            <param-name>forceEncoding</param-name> 
            <param-value>true</param-value> 
        </init-param> 
	</filter>
	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- 認証 -->
	<filter>
		<filter-name>AuthFilter</filter-name>
		<filter-class>com.jp.wonfes.auth.AuthFilter</filter-class>
<!-- TODO init-paramを利用して、除外クラスの設定をfilterクラスでやってみたい
「http://d.hatena.ne.jp/gekimu/20061115」
 		<init-param>
			<param-name></param-name>
			<param-value></param-value>
		</init-param>
	 -->
	 
	</filter>
	<filter-mapping>
		<filter-name>AuthFilter</filter-name>
		<url-pattern>/g01/*</url-pattern>
	</filter-mapping>	
<!-- 	<filter-mapping>
		<filter-name>AuthFilter</filter-name>
		<url-pattern>/g02/*</url-pattern>
	</filter-mapping>	 -->
	<filter-mapping>
		<filter-name>AuthFilter</filter-name>
		<url-pattern>/g03/*</url-pattern>
	</filter-mapping>	
	<filter-mapping>
		<filter-name>AuthFilter</filter-name>
		<url-pattern>/g04/*</url-pattern>
	</filter-mapping>	
	<filter-mapping>
		<filter-name>AuthFilter</filter-name>
		<url-pattern>/g05/*</url-pattern>
	</filter-mapping>	
	<filter-mapping>
		<filter-name>AuthFilter</filter-name>
		<url-pattern>/g06/*</url-pattern>
	</filter-mapping>	
	<filter-mapping>
		<filter-name>AuthFilter</filter-name>
		<url-pattern>/g07/*</url-pattern>
	</filter-mapping>	
	
</web-app> 